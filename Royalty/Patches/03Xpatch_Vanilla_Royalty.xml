<Operation Class="PatchOperationSequence">
    <success>Normal</success>
    <operations>
<!-- Royalty -->

      <li Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName = "PsychicSilencer"]/graphicData</xpath>
        <match Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName = "PsychicSilencer"]/graphicData</xpath>
          <value>
            <graphicData Inherit="False">
              <texPath>Things/Item/Health/BrainPhysics</texPath>
              <graphicClass>Graphic_StackCount</graphicClass>
              <color>(255, 204, 0)</color>
              <drawSize>1.00</drawSize>
            </graphicData>
          </value>
        </match>
        <nomatch Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName = "PsychicSilencer"]</xpath>
          <value>
            <graphicData Inherit="False">
              <texPath>Things/Item/Health/BrainPhysics</texPath>
              <graphicClass>Graphic_StackCount</graphicClass>
              <color>(255, 204, 0)</color>
              <drawSize>1.00</drawSize>
            </graphicData>
          </value>
        </nomatch>
      </li>
      <li Class="PatchOperationConditional">
        <xpath>/Defs/HediffDef[defName = "PsychicSilencer"]/defaultLabelColor</xpath>
        <match Class="PatchOperationReplace">
          <xpath>/Defs/HediffDef[defName = "PsychicSilencer"]/defaultLabelColor</xpath>
          <value>
            <defaultLabelColor>(255, 204, 0)</defaultLabelColor>
          </value>
        </match>
        <nomatch Class="PatchOperationAdd">
          <xpath>/Defs/HediffDef[defName = "PsychicSilencer"]</xpath>
          <value>
            <defaultLabelColor>(255, 204, 0)</defaultLabelColor>
          </value>
        </nomatch>
      </li>

   </operations>
</Operation>
</Patch>
