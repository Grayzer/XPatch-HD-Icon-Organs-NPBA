<!-- Harvest Everything! -->
<!-- Ogliss.Ykara.HarvestEverything -->

<Operation Class="PatchOperationFindMod">
<mods>
<li>Harvest Everything!</li>
</mods>
  <match Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
<!-- Harvest Everything! -->
<!-- Ear -->
<li Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName = "Ear"]</xpath>
    <value>
      <graphicData>
        <texPath>Things/Item/Health/Ear</texPath>
        <graphicClass>Graphic_StackCount</graphicClass>
        <color>(255, 255, 255)</color>
        <drawSize>1.00</drawSize>
      </graphicData>
    </value>
</li>
<li Class="PatchOperationAdd">
    <xpath>/Defs/HediffDef[defName = "Ear"]</xpath>
    <value>
      <defaultLabelColor>(255, 255, 255)</defaultLabelColor>
    </value>
</li>

   </operations>
 </match>
</Operation>
</Patch>
